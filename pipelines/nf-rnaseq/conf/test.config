/*
========================================================================================
    Test configuration for WASP2 RNA-seq ASE Pipeline
========================================================================================
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources for CI
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Test data paths (update these to actual test data locations)
    // These would be populated with real test data URLs or paths
    input      = "${projectDir}/assets/samplesheet_test.csv"
    vcf        = "${projectDir}/../../test_data/test_snps.vcf.gz"
    star_index = "${projectDir}/../../test_data/star_index"
    gtf        = "${projectDir}/../../test_data/test.gtf"
}
