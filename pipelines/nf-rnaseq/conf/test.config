/*
========================================================================================
    Test configuration for WASP2 RNA-seq ASE Pipeline
========================================================================================
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources for CI
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Test data paths - uses minimal test data in pipeline tests directory
    input      = "${projectDir}/assets/samplesheet_test.csv"
    vcf        = "${projectDir}/tests/data/test_snps.vcf.gz"
    star_index = "${projectDir}/tests/data/star_index"
    gtf        = "${projectDir}/tests/data/test.gtf"
}
