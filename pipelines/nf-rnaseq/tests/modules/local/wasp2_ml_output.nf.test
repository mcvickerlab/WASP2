nextflow_process {

    name "Test Process WASP2_ML_OUTPUT"
    script "../../../modules/local/wasp2_ml_output/main.nf"
    process "WASP2_ML_OUTPUT"

    tag "modules"
    tag "modules_local"
    tag "wasp2"
    tag "ml"

    test("Should convert counts to zarr format - stub") {

        options "-stub-run"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample', single_end:false ],
                    file('counts.tsv')
                ]
                input[1] = 'zarr'
                """
            }
        }

        then {
            assert process.success
            assert process.out.zarr
            assert process.out.versions
            assert snapshot(process.out).match()
        }
    }

