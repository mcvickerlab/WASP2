nextflow_process {

    name "Test Process WASP2_FILTER_REMAPPED"
    script "../../../modules/local/wasp2_filter_remapped/main.nf"
    process "WASP2_FILTER_REMAPPED"

    tag "modules"
    tag "modules_local"
    tag "wasp2"

    test("Should filter remapped reads using WASP algorithm - stub") {

        options "-stub-run"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample', single_end:false ],
                    file('remapped.bam'),
                    file('remapped.bam.bai')
                ]
                input[1] = [
                    [ id:'test_sample' ],
                    file('to_remap.bam')
                ]
                input[2] = [
                    [ id:'test_sample' ],
                    file('keep.bam')
                ]
                input[3] = [
                    [ id:'test_sample' ],
                    file('wasp_data.json')
                ]
                """
            }
        }

        then {
            assert process.success
            assert process.out.bam
            assert process.out.versions
            assert snapshot(process.out).match()
        }
    }
}
