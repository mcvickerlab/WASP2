config {
    // Test configuration for WASP2 RNA-seq ASE Pipeline
    testsDir "tests"

    // Location of test data
    configFile "nextflow.config"

    // Profile for running tests
    profile "test_stub"

    // Plugins
    plugins {
        load "nft-utils@0.0.3"
    }

    // Test options
    options {
        // Output directory for test artifacts
        outputDir ".nf-test"
    }
}
