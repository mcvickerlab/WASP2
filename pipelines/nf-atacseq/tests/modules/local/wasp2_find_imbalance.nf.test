nextflow_process {

    name "Test Process WASP2_FIND_IMBALANCE"
    script "../../../modules/local/wasp2_find_imbalance.nf"
    process "WASP2_FIND_IMBALANCE"

    tag "modules"
    tag "modules_local"
    tag "wasp2"

    test("Should compute allelic imbalance statistics - stub") {

        options "-stub-run"

        when {
            process {
                """
                input[0] = [ [ id:'test_sample' ], file('test_counts.tsv') ]
                input[1] = 10   // min_count
                input[2] = 1    // pseudocount
                """
            }
        }

        then {
            assert process.success
            assert process.out.results
            assert process.out.versions
            assert snapshot(process.out).match()
        }
    }
}
