nextflow_process {

    name "Test Process WASP2_FILTER_REMAPPED"
    script "../../../modules/local/wasp2_filter_remapped/main.nf"
    process "WASP2_FILTER_REMAPPED"

    tag "modules"
    tag "modules_local"
    tag "wasp2"

    test("Should filter remapped reads and produce WASP-corrected BAM - stub") {

        options "-stub-run"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample', single_end:false ],
                    file("${projectDir}/tests/data/stub_remapped.bam"),
                    file("${projectDir}/tests/data/stub_remapped.bam.bai"),
                    file("${projectDir}/tests/data/stub_to_remap.bam"),
                    file("${projectDir}/tests/data/stub_keep.bam"),
                    file("${projectDir}/tests/data/stub_wasp_data.json")
                ]
                """
            }
        }

        then {
            assert process.success
            assert process.out.bam
            assert process.out.stats
            assert process.out.versions
        }
    }
}
