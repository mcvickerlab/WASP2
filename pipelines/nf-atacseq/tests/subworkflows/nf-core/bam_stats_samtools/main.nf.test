nextflow_workflow {

    name "Test Workflow BAM_STATS_SAMTOOLS"
    script "../../../../subworkflows/nf-core/bam_stats_samtools/main.nf"
    workflow "BAM_STATS_SAMTOOLS"

    tag "subworkflows"
    tag "subworkflows/nf-core"
    tag "subworkflows/nf-core/bam_stats_samtools"

    test("Should generate stats, flagstat, and idxstats outputs") {

        tag "ci_stub"
        options "-stub-run"

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test' ],
                    file("${projectDir}/tests/data/stub_test.bam"),
                    file("${projectDir}/tests/data/stub_test.bam.bai")
                ])
                input[1] = file("${projectDir}/tests/data/chr_test.fa")
                """
            }
        }

        then {
            assert workflow.success
            assert workflow.out.stats
            assert workflow.out.flagstat
            assert workflow.out.idxstats
            assert workflow.out.versions
        }
    }
}
