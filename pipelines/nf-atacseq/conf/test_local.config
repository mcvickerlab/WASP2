/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-atacseq local test config
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Uses local test data with pre-built indices for fast pipeline validation.
    No remote downloads required.
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Local test profile'
    config_profile_description = 'Local test data for full pipeline validation'

    // Limit resources
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '1.h'

    // Local test data
    input     = "${projectDir}/tests/data/samplesheet_local.csv"
    fasta     = "${projectDir}/tests/data/chr_test.fa"
    fasta_fai = "${projectDir}/tests/data/chr_test.fa.fai"
    bwa_index = "${projectDir}/tests/data/bwa_index"

    // Variants from shared data
    vcf       = "${projectDir}/tests/data/variants.vcf.gz"

    // Skip heavy steps for faster testing
    skip_fastqc       = true
    skip_trimming     = true
    skip_dedup        = true
    skip_multiqc      = true
    skip_peak_calling = true
    peaks             = "${projectDir}/tests/data/regions.bed"

    // WASP2 options - low thresholds for test data
    wasp_min_count    = 1
    wasp_pseudocount  = 1
}
