nextflow_process {

    name "Test Process MERGE_COUNTS"
    script "../../../modules/local/merge_counts/main.nf"
    process "MERGE_COUNTS"

    tag "modules"
    tag "modules_local"
    tag "outrider"

    test("Should merge gene counts across samples - stub") {

        options "-stub-run"

        when {
            process {
                """
                input[0] = [
                    file("${projectDir}/tests/stub/sample1.gene_counts.tsv"),
                    file("${projectDir}/tests/stub/sample2.gene_counts.tsv"),
                    file("${projectDir}/tests/stub/sample3.gene_counts.tsv")
                ]
                """
            }
        }

        then {
            assert process.success
            assert process.out.count_matrix
            assert process.out.versions
        }
    }
}
