/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-outrider local test config
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Uses locally-generated test data with real BAMs from shared core.
    Run: cd pipelines/nf-outrider/tests/data && bash generate_test_data.sh
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Local test profile'
    config_profile_description = 'Local test dataset with real WASP2 data (3 samples)'

    // Limit resources for CI
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '1.h'

    // Local test data (3 real BAMs from shared core)
    input = "${projectDir}/tests/data/samplesheet_test.csv"
    vcf   = "${projectDir}/tests/data/variants.vcf.gz"
    gtf   = "${projectDir}/tests/data/annotation.gtf"

    // Fast test parameters (12 genes in expanded GTF, 3 samples)
    outrider_iterations  = 3
    outrider_min_samples = 3
    outrider_min_count   = 1          // Low threshold for simulated test data (~5x coverage)
}
