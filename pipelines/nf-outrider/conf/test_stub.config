/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-outrider Stub Test Config
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Minimal stub test data for CI/CD workflow validation
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Stub Test profile'
    config_profile_description = 'Stub test data to validate pipeline structure'

    // Limit resources for CI
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '1.h'

    // Stub test data (local to pipeline)
    input = "${projectDir}/tests/stub/samplesheet.csv"
    vcf   = "${projectDir}/tests/stub/variants.vcf.gz"
    gtf   = "${projectDir}/tests/stub/annotation.gtf"

    // Fast test parameters
    outrider_iterations  = 2
    outrider_min_samples = 2
}
