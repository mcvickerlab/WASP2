nextflow_process {

    name "Test Process SCATAC_PSEUDOBULK"
    script "../../../modules/local/scatac_pseudobulk/main.nf"
    process "SCATAC_PSEUDOBULK"

    tag "modules"
    tag "modules_local"
    tag "scatac"

    test("Should aggregate per-cell counts to pseudo-bulk - stub") {

        options "-stub-run"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_sample' ],
                    file('cell_counts.tsv')
                ]
                """
            }
        }

        then {
            assert process.success
            assert process.out.counts
            assert process.out.stats
            assert process.out.versions
            assert snapshot(process.out).match()
        }
    }
}
