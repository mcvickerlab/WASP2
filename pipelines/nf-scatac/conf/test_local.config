/*
    nf-scatac test_local config - local testing with real synthetic data
    Run: cd pipelines/nf-scatac/tests/data && bash generate_test_data.sh
*/

params {
    config_profile_name = 'Local test profile'
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '1.h'
    input      = "${projectDir}/tests/data/samplesheet_local.csv"
    vcf        = "${projectDir}/tests/data/variants.vcf.gz"
    outdir     = "${projectDir}/results_local"

    // Relaxed thresholds for small test data
    min_fragments_per_cell = 1
    min_cells_per_snp      = 1
    min_count              = 1
    pseudocount            = 1

    // Enable all analysis steps
    skip_pseudobulk = false
    skip_anndata    = false
    create_zarr     = false
}
