// Integration test configuration

profiles {
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
}

process {
    cpus = 1
    memory = '2.GB'
    time = '1.h'
}
