#!/usr/bin/env python
"""
WASP2: Allele-Specific Pipeline for Unbiased Read Mapping.

This is the main entry point for the WASP2 command-line interface.
"""

from pathlib import Path
import sys

# Ensure src directory is in path for development installs
root_dir = Path(__file__).parent.parent
sys.path.insert(0, str(root_dir / "src"))

from wasp2.cli import cli

if __name__ == "__main__":
    cli()
